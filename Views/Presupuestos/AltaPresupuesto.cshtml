@model Presupuesto

<form asp-asp-controller="Presupuestos" asp-action="CrearPresupuesto" method="post" class="container mt-4">
    <div class="mb-3">
        <label asp-for="IdPresupuesto" class="form-label" hidden>ID Presupuesto</label>
        <input asp-for="IdPresupuesto" type="number" class="form-control" value = 1 hidden/>
    </div>
    <div class="mb-3">
        <label asp-for="NombreDestinatario" class="form-label">Nombre del Destinatario</label>
        <input asp-for="NombreDestinatario" type="text" class="form-control" />
    </div>
    
    <div class="mb-3">
        <label asp-for="FechaCreacion" class="form-label">Fecha de Creaci√≥n</label>
        <input asp-for="FechaCreacion" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Presupuesto</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>