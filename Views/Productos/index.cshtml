@model List<Producto>

<h2>Lista de Productos</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Descripcion</td>
                <td>$ @producto.Precio</td>
                <td>
                    <a asp-controller="Productos" asp-action="ModificarProducto" asp-route-id="@producto.IdProducto" class="btn btn-warning">Editar</a>
                    <a asp-controller="Productos" asp-action="EliminarProducto" asp-route-id="@producto.IdProducto" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-controller="Productos" asp-action="AltaProducto" class="btn btn-success">Alta producto</a>
</div>



